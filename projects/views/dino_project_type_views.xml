<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree view for dino.project.type -->
        <record id="view_dino_project_type_tree" model="ir.ui.view">
            <field name="name">dino.project.type.tree</field>
            <field name="model">dino.project.type</field>
            <field name="arch" type="xml">
                <list string="Project Types">
                    <field name="name"/>
                    <field name="code"/>
                </list>
            </field>
        </record>

        <!-- Form view for dino.project.type -->
        <record id="view_dino_project_type_form" model="ir.ui.view">
            <field name="name">dino.project.type.form</field>
            <field name="model">dino.project.type</field>
            <field name="arch" type="xml">
                <form string="Project Type">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for dino.project.type -->
        <record id="action_dino_project_type" model="ir.actions.act_window">
            <field name="name">Project Types</field>
            <field name="res_model">dino.project.type</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>