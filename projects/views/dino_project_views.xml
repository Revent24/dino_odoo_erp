<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_dino_project_tree" model="ir.ui.view">
            <field name="name">dino.project.tree</field>
            <field name="model">dino.project</field>
            <field name="arch" type="xml">
                <list string="Projects">
                    <field name="name"/>
                    <field name="date"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_dino_project_form" model="ir.ui.view">
            <field name="name">dino.project.form</field>
            <field name="model">dino.project</field>
            <field name="arch" type="xml">
                <form string="Project">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for Project Model -->
        <record id="action_dino_project" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">dino.project</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new project
                </p>
            </field>
        </record>
    </data>
</odoo>
