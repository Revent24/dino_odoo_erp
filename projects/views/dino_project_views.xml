<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_dino_project_tree" model="ir.ui.view">
            <field name="name">dino.project.tree</field>
            <field name="model">dino.project</field>
            <field name="arch" type="xml">
                <list string="Projects">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="project_type"/>
                    <field name="partner_id" options="{'no_create': False}"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_dino_project_form" model="ir.ui.view">
            <field name="name">dino.project.form</field>
            <field name="model">dino.project</field>
            <field name="arch" type="xml">
                <form string="Project">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="date" required="1"/>
                            <field name="project_type" widget="radio" options="{'horizontal': True}" required="1"/>
                            <field name="partner_id" options="{'no_create': False}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for Project Model -->
        <record id="action_dino_project" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">dino.project</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'default_project_type': 'overhead'}</field>
            <field name="domain">[('project_type','!=','sale')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new project
                </p>
            </field>
        </record>

        <!-- Sales projects: views and action -->
        <record id="view_dino_project_tree_sale" model="ir.ui.view">
            <field name="name">dino.project.tree.sale</field>
            <field name="model">dino.project</field>
            <field name="arch" type="xml">
                <list string="Sales Projects">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="order_ref"/>
                    <field name="partner_id" options="{'no_create': False}"/>
                </list>
            </field>
        </record>

        <record id="view_dino_project_form_sale" model="ir.ui.view">
            <field name="name">dino.project.form.sale</field>
            <field name="model">dino.project</field>
            <field name="arch" type="xml">
                <form string="Sales Project">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="date" required="1"/>
                            <field name="order_ref"/>
                            <field name="partner_id" options="{'no_create': False}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_dino_project_sales" model="ir.actions.act_window">
            <field name="name">Sales Projects</field>
            <field name="res_model">dino.project</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'default_project_type': 'sale'}</field>
            <field name="domain">[('project_type','=','sale')]</field>
            <field name="view_id" ref="dino_erp.view_dino_project_tree_sale"/>
        </record>

        <!-- Purchase projects: views and action -->
        <record id="view_dino_project_tree_purchase" model="ir.ui.view">
            <field name="name">dino.project.tree.purchase</field>
            <field name="model">dino.project</field>
            <field name="arch" type="xml">
                <list string="Purchase Projects">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="order_ref"/>
                    <field name="partner_id" options="{'no_create': False}"/>
                </list>
            </field>
        </record>

        <record id="view_dino_project_form_purchase" model="ir.ui.view">
            <field name="name">dino.project.form.purchase</field>
            <field name="model">dino.project</field>
            <field name="arch" type="xml">
                <form string="Purchase Project">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="date" required="1"/>
                            <field name="order_ref"/>
                            <field name="partner_id" options="{'no_create': False}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_dino_project_purchases" model="ir.actions.act_window">
            <field name="name">Purchase Projects</field>
            <field name="res_model">dino.project</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'default_project_type': 'purchase'}</field>
            <field name="domain">[('project_type','=','purchase')]</field>
            <field name="view_id" ref="dino_erp.view_dino_project_tree_purchase"/>
        </record>

    </data>
</odoo>
