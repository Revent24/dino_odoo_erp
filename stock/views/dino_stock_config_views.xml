<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Action and view for Component Categories -->
    <record id="dino_component_category_action" model="ir.actions.act_window">
      <field name="name">Categories</field>
      <field name="res_model">dino.component.category</field>
      <field name="view_mode">list,form</field>
    </record>

    <record id="dino_component_category_tree" model="ir.ui.view">
      <field name="name">dino.component.category.view.list</field>
      <field name="model">dino.component.category</field>
      <field name="arch" type="xml">
        <list string="Categories">
          <field name="name"/>
          <field name="parent_id"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <!-- Action and view for Units of Measure -->
    <record id="dino_uom_action" model="ir.actions.act_window">
      <field name="name">Units of Measure</field>
      <field name="res_model">dino.uom</field>
      <field name="view_mode">list,form</field>
    </record>

    <record id="dino_uom_tree" model="ir.ui.view">
      <field name="name">dino.uom.view.list</field>
      <field name="model">dino.uom</field>
      <field name="arch" type="xml">
        <list string="Units of Measure">
          <field name="name"/>
          <field name="rounding"/>
          <field name="active"/>
        </list>
      </field>
    </record>

  </data>
</odoo>
