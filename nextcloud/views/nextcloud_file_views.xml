<?xml version="1.0" encoding="utf-8"?>

<!-- File nextcloud/views/nextcloud_file_views.xml -->
<odoo>
    <record id="view_nextcloud_file_list" model="ir.ui.view">
        <field name="name">nextcloud.file.list</field>
        <field name="model">nextcloud.file</field>
        <field name="arch" type="xml">
            <list string="Nextcloud Files" create="false" edit="false" action="action_open_folder" type="object">
                <header>
                    <button name="action_create_folder_wizard" string="Новая папка" type="object" class="btn-secondary" icon="fa-folder-plus"/>
                    <button name="action_upload_file_wizard" string="Загрузить файл" type="object" class="btn-primary" icon="fa-upload"/>
                </header>
                <field name="icon_html" widget="html" string=" " readonly="1"/>
                <field name="name" string="Имя"/>
                <field name="file_id" string="ID" optional="show"/>
                <field name="size" string="Размер (MB)" widget="float" digits="[16,2]"/>
                <field name="last_modified" string="Изменен"/>
                <button name="action_view_form" string="Инфо" type="object" icon="fa-info-circle"/>
                <field name="path" invisible="1"/>
                <field name="file_type" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_nextcloud_file_form" model="ir.ui.view">
        <field name="name">nextcloud.file.form</field>
        <field name="model">nextcloud.file</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="file_id"/>
                        <field name="path" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Debug Data">
                            <field name="debug_info" widget="text" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_nextcloud_file" model="ir.actions.server">
        <field name="name">Nextcloud</field>
        <field name="model_id" ref="model_nextcloud_file"/>
        <field name="state">code</field>
        <field name="code">
client = env['nextcloud.client'].search([], limit=1)
action = client.get_action_open_client() if client else {'type': 'ir.actions.act_window', 'res_model': 'nextcloud.client', 'view_mode': 'form', 'target': 'current'}
        </field>
    </record>
</odoo>
<!-- End -->