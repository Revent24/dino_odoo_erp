<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_nextcloud_client_form" model="ir.ui.view">
        <field name="name">nextcloud.client.form</field>
        <field name="model">nextcloud.client</field>
        <field name="arch" type="xml">
            <form string="Nextcloud Client" 
            create="0" delete="0" sidebar="False" options="{'mode': 'edit'}">
                <header>
                    <!-- Показать кнопку Test Connection только если не confirmed -->
                    <button name="action_test_connection" string="Test Connection" type="object" class="oe_highlight"
                        invisible="state == 'confirmed'"/>
                    <!-- Показать кнопку Edit Connection только если confirmed -->
                    <button name="action_edit_connection" string="Edit Connection" type="object" class="oe_link"
                        invisible="state != 'confirmed'"/>
                </header>
                <sheet>
                        <!-- Используем t-if вместо invisible/attrs -->
                        <widget name="web_ribbon" title="Connected" bg_color="bg-success" invisible="state != 'confirmed'"/>
                        <widget name="web_ribbon" title="Error" bg_color="bg-warning" invisible="state != 'error'"/>
                        <widget name="web_ribbon" title="Draft" bg_color="bg-secondary" invisible="state != 'draft'"/>
                    <div class="oe_title">
                         <h1>
                                <field name="name" placeholder="Connection Name"
                                string="Name" required="1" readonly="state == 'confirmed'"/>
                        </h1>
                    </div>
                    <group>
                        <!-- Поля readonly когда state == 'confirmed' -->
                        <field name="url" readonly="state == 'confirmed'"/>
                        <field name="username" readonly="state == 'confirmed'"/>
                        <field name="password" password="True" readonly="state == 'confirmed'"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_nextcloud_client_tree" model="ir.ui.view">
        <field name="name">nextcloud.client.list</field>
        <field name="model">nextcloud.client</field>
        <field name="arch" type="xml">
            <list string="Nextcloud Clients" create="0">
                <field name="name"/>
                <field name="url"/>
                <field name="username"/>
                <field name="state"/>
            </list>
        </field>
    </record>
</odoo>