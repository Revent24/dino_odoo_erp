<?xml version="1.0" encoding="utf-8"?>

<!-- File nextcloud/views/nextcloud_client_views.xml -->
<odoo>
    <record id="view_nextcloud_client_form_v4" model="ir.ui.view">
        <field name="name">nextcloud.client.form</field>
        <field name="model">nextcloud.client</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Nextcloud Client">
                <header>
                    <button name="action_test_connection" string="Connect &amp; Sync" type="object" class="oe_highlight" icon="fa-refresh" invisible="state == 'confirmed'"/>
                    <button name="action_edit_connection" string="Edit Settings" type="object" class="oe_link" icon="fa-pencil" invisible="state != 'confirmed'"/>
                    <field name="state" widget="statusbar" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" readonly="state == 'confirmed'"/></h1>
                    </div>
                    <notebook>
                        <page string="Settings" name="settings">
                            <group>
                                <group string="Credentials">
                                    <field name="url" readonly="state == 'confirmed'"/>
                                    <field name="username" readonly="state == 'confirmed'"/>
                                    <field name="password" password="True" readonly="state == 'confirmed'"/>
                                </group>
                                <group string="Root Directory">
                                    <field name="root_folder_id" readonly="1" force_save="1"/>
                                    <field name="root_folder_path" readonly="1" force_save="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Root Folders" name="root_mapping">
                            <field name="root_maps">
                                <list create="0" delete="0">
                                    <field name="folder_name" string="Раздел"/>
                                    <field name="model_id" string="Модель Odoo"/>
                                    <field name="folder_file_id" string="ID NC"/>
                                    <field name="folder_path" string="Путь на сервере"/>
                                </list>
                                <form string="Root Mapping">
                                    <sheet>
                                        <group>
                                            <group string="Связь с Odoo">
                                                <field name="folder_name"/>
                                                <field name="model_id" readonly="1"/>
                                                <field name="res_id" readonly="1"/>
                                            </group>
                                            <group string="Связь с Nextcloud">
                                                <field name="folder_id" string="Папка в списке файлов"/>
                                                <field name="folder_file_id" readonly="1"/>
                                                <field name="folder_path" readonly="1"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_nextcloud_client_tree" model="ir.ui.view">
        <field name="name">nextcloud.client.list</field>
        <field name="model">nextcloud.client</field>
        <field name="arch" type="xml">
            <list string="Nextcloud Clients">
                <field name="name"/>
                <field name="url"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>
</odoo>
<!-- End -->