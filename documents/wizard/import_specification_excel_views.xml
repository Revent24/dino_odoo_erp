<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==============================================
         WIZARD: Импорт спецификации из Excel
         Поддерживает разные форматы парсеров (Sapriz 1C, Universal)
         ============================================== -->
    <record id="view_import_specification_excel_form" model="ir.ui.view">
        <field name="name">dino.import.specification.excel.form</field>
        <field name="model">dino.import.specification.excel</field>
        <field name="arch" type="xml">
            <form string="Import from Excel">
                <group>
                    <!-- Выбор типа парсера (радио-кнопки) -->
                    <field name="parser_type" widget="radio"/>
                    <!-- Загрузка Excel-файла -->
                    <field name="file_data" filename="filename" widget="binary"/>
                    <field name="filename" invisible="1"/>
                </group>
                <footer>
                    <button name="action_import" string="Import" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ==============================================
         ACTION: Открытие визарда импорта
         Вызывается кнопкой "Import Excel" в форме документа
         ============================================== -->
    <record id="action_import_specification_excel" model="ir.actions.act_window">
        <field name="name">Import from Excel</field>
        <field name="res_model">dino.import.specification.excel</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
