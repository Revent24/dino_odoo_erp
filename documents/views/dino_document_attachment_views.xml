<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Attachment Tree View -->
    <record id="view_dino_document_attachment_tree" model="ir.ui.view">
        <field name="name">dino.document.attachment.tree</field>
        <field name="model">dino.document.attachment</field>
        <field name="arch" type="xml">
            <list decoration-success="import_status=='imported'" 
                  decoration-danger="import_status=='error'"
                  decoration-muted="import_status=='draft'">
                <field name="filename"/>
                <field name="file_type"/>
                <field name="parser_type"/>
                <field name="import_status" widget="badge" 
                       decoration-success="import_status=='imported'"
                       decoration-warning="import_status=='importing'"
                       decoration-danger="import_status=='error'"
                       decoration-info="import_status=='draft'"/>
                <field name="imported_lines_count"/>
                <field name="import_date"/>
                <field name="create_date"/>
                <button name="action_import" 
                        string="Import" 
                        type="object" 
                        icon="fa-download"
                        invisible="import_status in ['imported', 'importing']"/>
                <button name="action_reset" 
                        string="Reset" 
                        type="object" 
                        icon="fa-refresh"
                        invisible="import_status == 'draft'"/>
            </list>
        </field>
    </record>

    <!-- Document Attachment Form View -->
    <record id="view_dino_document_attachment_form" model="ir.ui.view">
        <field name="name">dino.document.attachment.form</field>
        <field name="model">dino.document.attachment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_import" 
                            string="Import File" 
                            type="object" 
                            class="oe_highlight"
                            invisible="import_status in ['imported', 'importing']"/>
                    <button name="action_reset" 
                            string="Reset Status" 
                            type="object"
                            invisible="import_status == 'draft'"/>
                    <button name="action_view_document" 
                            string="View Document" 
                            type="object" 
                            class="oe_link"/>
                    <field name="import_status" widget="statusbar" 
                           statusbar_visible="draft,importing,imported"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_document" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-file-text-o">
                            <div class="o_stat_info">
                                <field name="document_id" readonly="1"/>
                                <span class="o_stat_text">Document</span>
                            </div>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="filename"/>
                            <field name="file_type"/>
                            <field name="parser_type"/>
                        </group>
                        <group>
                            <field name="imported_lines_count" readonly="1"/>
                            <field name="import_date" readonly="1"/>
                            <field name="auto_import_on_create"/>
                            <field name="replace_existing"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="file_data" filename="filename"/>
                    </group>
                    
                    <notebook>
                        <page string="Error Log" invisible="not error_log">
                            <field name="error_log" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action removed - not used in menu -->

</odoo>
