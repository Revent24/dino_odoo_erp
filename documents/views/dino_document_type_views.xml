<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ==============================================
             TREE VIEW: Список типов документов
             ============================================== -->
        <record id="view_dino_document_type_list" model="ir.ui.view">
            <field name="name">dino.document.type.list</field>
            <field name="model">dino.document.type</field>
            <field name="arch" type="xml">
                <list string="Document Types" 
                      default_order="sequence, name"
                      decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="document_count"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- ==============================================
             FORM VIEW: Форма типа документа
             ============================================== -->
        <record id="view_dino_document_type_form" model="ir.ui.view">
            <field name="name">dino.document.type.form</field>
            <field name="model">dino.document.type</field>
            <field name="arch" type="xml">
                <form string="Document Type">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_documents" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-file-text-o"
                                    invisible="document_count == 0">
                                <field name="document_count" widget="statinfo" string="Documents"/>
                            </button>
                            <field name="active" widget="boolean_button" 
                                   options="{'terminology': 'active'}"/>
                        </div>
                        
                        <group>
                            <group>
                                <field name="name" placeholder="Видаткова накладна"/>
                                <field name="code" placeholder="invoice"/>
                            </group>
                            <group>
                                <field name="sequence"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="description" placeholder="Опис типу документа..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action moved to core/main_menu.xml -->

    </data>
</odoo>
