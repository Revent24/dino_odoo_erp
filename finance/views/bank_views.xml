<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="action_dino_bank_config" model="ir.actions.act_window">
    <field name="name">Банк Конфигурации</field>
    <field name="res_model">dino.bank.config</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="view_dino_bank_config_list" model="ir.ui.view">
    <field name="name">dino.bank.config.list</field>
    <field name="model">dino.bank.config</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="api_url"/>
        <field name="active"/>
        <field name="last_sync"/>
      </list>
    </field>
  </record>

  <record id="view_dino_bank_config_form" model="ir.ui.view">
    <field name="name">dino.bank.config.form</field>
    <field name="model">dino.bank.config</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="api_url"/>
            <field name="api_key"/>
            <field name="active"/>
            <field name="last_sync"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

</odoo>