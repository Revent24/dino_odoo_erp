<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="action_dino_bank_config" model="ir.actions.act_window">
    <field name="name">Bank Directory</field>
    <field name="res_model">dino.bank</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="view_dino_bank_config_list" model="ir.ui.view">
    <field name="name">dino.bank.list</field>
    <field name="model">dino.bank</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="mfo"/>
        <field name="edrpou"/>
        <field name="start_sync_date"/>
      </list>
    </field>
  </record>

  <record id="view_dino_bank_config_form" model="ir.ui.view">
    <field name="name">dino.bank.form</field>
    <field name="model">dino.bank</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="button_sync" type="object" string="Synchronize" class="btn-primary"/>
        </header>
        <sheet>
          <group name="general_info">
            <group>
              <field name="mfo"/>
              <field name="name"/>
              <field name="edrpou"/>
              <field name="active"/>
            </group>
            <group>
            </group>  
          </group>
          <notebook invisible="not active">
              <page name="api_settings" string="API">
                  <group>
                    <group string="API Settings">
                      <field name="api_client_id"/>
                      <field name="api_key" password="True"/>
                      <field name="start_sync_date"/>
                      <field name="last_sync_date"/>
                    </group>
                    <group string="CRON Settings">
                      <field name="cron_enable"/>
                        <field name="cron_overwrite_existing_rates" invisible="not cron_enable"/>
                        <field name="cron_interval_number" invisible="not cron_enable"/>
                        <field name="cron_interval_type" invisible="not cron_enable"/>
                        <field name="cron_time_of_day_hours" widget="float_time" invisible="not cron_enable or cron_interval_type in ('minutes','hours')"/>
                        <field name="cron_numbercall" invisible="not cron_enable"/>
                    </group>
                  </group>
              </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

</odoo>