<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_dino_bank_balance_history_tree" model="ir.ui.view">
            <field name="name">dino.bank.balance.history.tree</field>
            <field name="model">dino.bank.balance.history</field>
            <field name="arch" type="xml">
                <list string="Balance History">
                    <field name="date"/>
                    <field name="bank_account_id"/>
                    <field name="balance_start"/>
                    <field name="turnover_debit"/>
                    <field name="turnover_credit"/>
                    <field name="balance_end"/>
                    <field name="balance_change"/>
                    <field name="is_final" optional="hide"/>
                    <field name="currency_id" column_invisible="1"/>
                </list>
            </field>
        </record>

        <record id="view_dino_bank_balance_history_form" model="ir.ui.view">
            <field name="name">dino.bank.balance.history.form</field>
            <field name="model">dino.bank.balance.history</field>
            <field name="arch" type="xml">
                <form string="Balance History">
                    <sheet>
                        <group>
                            <group string="Account Info">
                                <field name="date"/>
                                <field name="bank_account_id"/>
                                <field name="currency_id"/>
                                <field name="is_final"/>
                            </group>
                            <group string="Balance Details">
                                <field name="balance_start"/>
                                <field name="turnover_debit"/>
                                <field name="turnover_credit"/>
                                <field name="balance_end"/>
                                <field name="balance_change"/>
                            </group>
                        </group>
                        <group string="Technical Info">
                            <group>
                                <field name="last_movement_date"/>
                                <field name="import_date"/>
                            </group>
                            <group>
                                <field name="external_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_dino_bank_balance_history_search" model="ir.ui.view">
            <field name="name">dino.bank.balance.history.search</field>
            <field name="model">dino.bank.balance.history</field>
            <field name="arch" type="xml">
                <search string="Balance History Filters">
                    <field name="bank_account_id"/>
                    <field name="date"/>

                    <group expand="0" string="Group By">
                        <filter string="Счет" name="group_by_account" context="{'group_by': 'bank_account_id'}"/>
                        <filter string="Дата" name="group_by_day" context="{'group_by': 'date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_dino_bank_balance_history_graph" model="ir.ui.view">
            <field name="name">dino.bank.balance.history.graph</field>
            <field name="model">dino.bank.balance.history</field>
            <field name="arch" type="xml">
                <graph string="Balance Trend" type="line">
                    <field name="date" interval="day"/>
                    <field name="balance_end" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="view_dino_bank_balance_history_pivot" model="ir.ui.view">
            <field name="name">dino.bank.balance.history.pivot</field>
            <field name="model">dino.bank.balance.history</field>
            <field name="arch" type="xml">
                <pivot string="Balance Pivot">
                    <field name="date" interval="day" type="row"/>
                    <field name="bank_account_id" type="col"/>
                    <field name="balance_end" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="action_dino_bank_balance_history" model="ir.actions.act_window">
            <field name="name">Balance History</field>
            <field name="res_model">dino.bank.balance.history</field>
            <field name="view_mode">graph,list,pivot,form</field>
            <field name="search_view_id" ref="view_dino_bank_balance_history_search"/>
        </record>
    </data>
</odoo>
