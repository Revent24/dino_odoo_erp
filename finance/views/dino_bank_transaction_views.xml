<odoo>
    <data>
        <record id="view_dino_bank_transaction_tree" model="ir.ui.view">
            <field name="name">dino.bank.transaction.tree</field>
            <field name="model">dino.bank.transaction</field>
            <field name="arch" type="xml">
                <list string="Bank Transactions" create="false" edit="false">
                    <field name="datetime" readonly="1"/>
                    <field name="document_number" readonly="1"/>
                    <field name="description" readonly="1"/>
                    <field name="amount" readonly="1"/>
                    <field name="partner_id" widget="many2one" options="{'no_open': False}"/>
                </list>
            </field>
        </record>

        <record id="view_dino_bank_transaction_form" model="ir.ui.view">
            <field name="name">dino.bank.transaction.form</field>
            <field name="model">dino.bank.transaction</field>
            <field name="arch" type="xml">
                <form string="Bank Transaction" create="false" edit="false">
                    <sheet>
                        <group>
                            <group string="Transaction info" name="transaction_info">
                                <field name="bank_account_id" readonly="1"/>
                                <field name="document_number" readonly="1"/>
                                <field name="datetime" readonly="1"/>
                                <field name="amount" readonly="1"/>
                                <field name="balance_after" readonly="1"/>
                                <field name="description" readonly="1"/>
                            </group>
                            <group string="Counterparty Details" name="counterparty">
                                <field name="partner_id" readonly="1"/>
                                <field name="counterparty_name" readonly="1"/>
                                <field name="counterparty_iban" readonly="1"/>
                                <field name="counterparty_bank_name" readonly="1"/>
                                <field name="counterparty_bank_city" readonly="1"/>
                                <field name="counterparty_edrpou" readonly="1"/>
                            </group>
                        </group>

                        <group string="Raw Data">
                            <field name="raw_data" 
                                readonly="1" 
                                nolabel="1" 
                                colspan="2" 
                                widget="ace" 
                                options="{'mode': 'python'}"
                                style="height: 300px; font-family: monospace;"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_dino_bank_transaction" model="ir.actions.act_window">
            <field name="name">Bank Transactions</field>
            <field name="res_model">dino.bank.transaction</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('bank_account_id.show_in_transactions', '=', True)]</field>
        </record>
    </data>
</odoo>