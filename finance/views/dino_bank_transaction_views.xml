<odoo>
    <data>
        <record id="view_dino_bank_transaction_tree" model="ir.ui.view">
            <field name="name">dino.bank.transaction.tree</field>
            <field name="model">dino.bank.transaction</field>
            <field name="arch" type="xml">
                <list string="Bank Transactions">
                    <field name="datetime"/>
                    <field name="bank_account_id"/>
                    <field name="description"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_dino_bank_transaction_form" model="ir.ui.view">
            <field name="name">dino.bank.transaction.form</field>
            <field name="model">dino.bank.transaction</field>
            <field name="arch" type="xml">
                <form string="Bank Transaction">
                    <sheet>
                        <group>
                            <group>
                                <field name="bank_account_id"/>
                                <field name="external_id"/>
                                <field name="datetime"/>
                                <field name="amount"/>
                                <field name="balance_after"/>
                            </group>
                            <group>
                                <field name="description"/>
                                <field name="state"/>
                            </group>
                        </group>
                        <group string="Counterparty Details" name="counterparty">
                            <field name="counterparty_name"/>
                            <field name="counterparty_iban"/>
                            <field name="counterparty_edrpou"/>
                        </group>
                        <group string="Raw Data">
                            <field name="raw_data" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_dino_bank_transaction" model="ir.actions.act_window">
            <field name="name">Bank Transactions</field>
            <field name="res_model">dino.bank.transaction</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>