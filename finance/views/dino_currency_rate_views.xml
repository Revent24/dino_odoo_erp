<odoo>
    <data>
        <record id="view_dino_currency_rate_tree" model="ir.ui.view">
            <field name="name">dino.currency.rate.tree</field>
            <field name="model">dino.currency.rate</field>
            <field name="arch" type="xml">
                <list string="Currency Rates">
                    <field name="date"/>
                    <field name="currency_id"/>
                    <field name="rate"/>
                    <field name="source"/>
                </list>
            </field>
        </record>

        <record id="view_dino_currency_rate_form" model="ir.ui.view">
            <field name="name">dino.currency.rate.form</field>
            <field name="model">dino.currency.rate</field>
            <field name="arch" type="xml">
                <form string="Currency Rate">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="date"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="rate"/>
                                <field name="source"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action moved to core/main_menu.xml -->

        <!-- Action for built-in Odoo currency rates -->
        <record id="view_res_currency_rate_list_dino" model="ir.ui.view">
            <field name="name">res.currency.rate.list.dino</field>
            <field name="model">res.currency.rate</field>
            <field name="arch" type="xml">
                <list string="System Currency Rates">
                    <field name="name"/>
                    <field name="currency_id"/>
                    <field name="company_id"/>
                    <field name="rate"/>
                    <field name="write_date" string="Last Updated"/>
                </list>
            </field>
        </record>

        <record id="action_res_currency_rate" model="ir.actions.act_window">
            <field name="name">System Currency Rates</field>
            <field name="res_model">res.currency.rate</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_res_currency_rate_list_dino"/>
        </record>

    </data>
</odoo>