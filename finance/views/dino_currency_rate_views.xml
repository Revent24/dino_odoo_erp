<odoo>
    <data>
        <record id="view_dino_currency_rate_tree" model="ir.ui.view">
            <field name="name">dino.currency.rate.tree</field>
            <field name="model">dino.currency.rate</field>
            <field name="arch" type="xml">
                <list string="Currency Rates">
                    <field name="date"/>
                    <field name="currency_id"/>
                    <field name="rate"/>
                    <field name="source"/>
                </list>
            </field>
        </record>

        <record id="view_dino_currency_rate_form" model="ir.ui.view">
            <field name="name">dino.currency.rate.form</field>
            <field name="model">dino.currency.rate</field>
            <field name="arch" type="xml">
                <form string="Currency Rate">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="date"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="rate"/>
                                <field name="source"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_dino_currency_rate" model="ir.actions.act_window">
            <field name="name">Currency Rates</field>
            <field name="res_model">dino.currency.rate</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>