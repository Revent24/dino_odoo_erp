<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- List view for API Endpoints -->
    <record id="dino_api_endpoint_list" model="ir.ui.view">
      <field name="name">dino.api.endpoint.list</field>
      <field name="model">dino.api.endpoint</field>
      <field name="arch" type="xml">
        <list string="API Endpoints">
          <field name="name"/>
          <field name="operation_type"/>
          <field name="active" widget="boolean_toggle" readonly="1"/>
          <field name="cron_active" widget="boolean_toggle" readonly="1"/>
          <field name="last_result"/>
          <field name="last_sync_date"/>
          <field name="next_run"/>
        </list>
      </field>
    </record>

    <!-- Form view for API Endpoints -->
    <record id="dino_api_endpoint_form" model="ir.ui.view">
      <field name="name">dino.api.endpoint.form</field>
      <field name="model">dino.api.endpoint</field>
      <field name="arch" type="xml">
        <form string="API Endpoint">
          <header>
            <button name="action_activate" type="object" string="Activate" class="btn-success" invisible="active"/>
            <button name="action_edit" type="object" string="Edit" class="btn-warning" invisible="not active or cron_running"/>
            <button name="action_run" type="object" string="Run Now" class="btn-primary" invisible="not active or cron_running"/>
            <button name="action_stop" type="object" string="Stop" class="btn-danger" invisible="not cron_running"/>
          </header>
          <sheet>
            <div class="oe_title">
              <h1><field name="name" readonly="active"/></h1>
            </div>
            <group>
              <group string="General">
                <field name="operation_type" readonly="active"/>
                <field name="description" readonly="active"/>
              </group>
              <group string="Settings">
                <field name="start_date" readonly="active"/>
                <field name="force_full_sync" readonly="active"/>
                <field name="cron_active" readonly="active"/>
                <field name="next_run" readonly="1"/>
              </group>
            </group>


            <notebook readonly="active">
              <page string="Log History">
                <field name="log_ids"/>
              </page>

              <page string="Authentication" invisible="not show_token and not show_api_key">
                <group>
                  <group>
                    <field name="bank_id" invisible="not show_bank" readonly="active" 
                        domain="['|', '|', 
                                  ('mfo', '=', '322001' if operation_type in ['mono_client_info', 'mono_rates', 'mono_transactions'] else '305299'),
                                  ('mfo', '=', '305299' if operation_type in ['privat_balances', 'privat_transactions', 'privat_balance_history'] else '322001'),
                                  ('mfo', '=', False)]"/>
                    <field name="auth_api_key" invisible="not show_api_key" widget="CopyClipboardChar" readonly="active"/>
                    <field name="auth_token" invisible="not show_token" widget="CopyClipboardChar" readonly="active"/>
                    <field name="seafile_url" invisible="operation_type != 'seafile_sync'" readonly="active"/>
                    <field name="seafile_repo_id" invisible="operation_type != 'seafile_sync'" readonly="1"/>
                  </group>
                  <group>
                  </group>
                </group>
              </page>

              <page string="Cron Settings" invisible="not cron_active">
                  <group>
                  <group string="Base Recurrence">
                      <field name="cron_interval_number" readonly="active"/>
                      <field name="cron_interval_type" readonly="active"/>
                      <field name="cron_day_of_month" readonly="active" invisible="cron_interval_type != 'months'"/>
                      <field name="cron_last_day_of_month" readonly="active" invisible="cron_interval_type != 'months'"/>
                      <field name="cron_start_time" widget="float_time" readonly="active"/>
                      <field name="cron_end_time" widget="float_time" readonly="active" invisible="cron_interval_type in ['days', 'weeks', 'months']"/>
                  </group>
                
                  <group string="Advanced Filters">
                    <label for="cron_monday" string="Weekdays"/>
                    <div class="o_row">
                      <label for="cron_monday" string="Mon"/>
                      <field name="cron_monday" readonly="active" nolabel="1"/>
                      <label for="cron_tuesday" string="Tue"/>
                      <field name="cron_tuesday" readonly="active" nolabel="1"/>
                      <label for="cron_wednesday" string="Wed"/>
                      <field name="cron_wednesday" readonly="active" nolabel="1"/>
                      <label for="cron_thursday" string="Thu"/>
                      <field name="cron_thursday" readonly="active" nolabel="1"/>
                      <label for="cron_friday" string="Fri"/>
                      <field name="cron_friday" readonly="active" nolabel="1"/>
                      <label for="cron_saturday" string="Sat"/>
                      <field name="cron_saturday" readonly="active" nolabel="1"/>
                      <label for="cron_sunday" string="Sun"/>
                      <field name="cron_sunday" readonly="active" nolabel="1"/>
                    </div>
                    <field name="cron_timezone" readonly="active"/>
                    <field name="cron_priority" readonly="active"/>
                  </group>
                  </group>
              </page>
            </notebook> 
          </sheet>
        </form>
      </field>
    </record>


    <!-- Search view -->
    <record id="dino_api_endpoint_search" model="ir.ui.view">
      <field name="name">dino.api.endpoint.search</field>
      <field name="model">dino.api.endpoint</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="operation_type"/>
          <filter string="Active" name="active" domain="[('active', '=', True)]"/>
          <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
          <separator/>
          <filter string="All" name="all" domain="['|', ('active', '=', True), ('active', '=', False)]"/>
        </search>
      </field>
    </record>


    <!-- List view for API Logs -->
    <record id="dino_api_log_list" model="ir.ui.view">
      <field name="name">dino.api.log.list</field>
      <field name="model">dino.api.log</field>
      <field name="arch" type="xml">
        <list string="API Logs" create="false" edit="false" delete="false">
          <field name="executed_at"/>
          <field name="trigger_type"/>
          <field name="status"/>
          <field name="response_data"/>
          <field name="error_message" optional="hide"/>
        </list>
      </field>
    </record>
  </data>
</odoo>