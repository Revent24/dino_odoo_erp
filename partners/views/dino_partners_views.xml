<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_dino_partner_tree" model="ir.ui.view">
        <field name="name">dino.partner.tree</field>
        <field name="model">dino.partner</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="full_name"/>
                <field name="partner_type"/>
                <field name="egrpou"/>
            </list>
            </field>
        </record>

    <!-- ==============================================
             FORM VIEW: Форма контрагента
             Содержит: основные поля, список контактов
             ============================================== -->
    <record id="view_dino_partner_form" model="ir.ui.view">
        <field name="name">dino.partner.form</field>
        <field name="model">dino.partner</field>
        <field name="arch" type="xml">
            <form>   
                <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="Partner Name" string="Name"/>
                    </h1>
                    <div>
                        <field name="full_name"/>
                    </div>
                </div>
                    <group>
                        <group string="MAIN INFO">
                            <field name="egrpou"/>
                            <field name="inn"/>
                            <field name="inn_date"/>
                        </group>
                        <group string="Type">
                            <field name="tag_ids" string="Type" widget="many2many_tags" required="True" colors="color:color" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group string="KVED">
                            <field name="kved_number"/>
                            <field name="kved"/>
                        </group>
                        <group string="CONTACT INFO">
                            <field name="address"/>
                            <field name="director"/>
                            <field name="director_gen"/>
                        </group>
                        <group string="TAX SYSTEMS">
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="tax_system_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contacts">
                            <field name="contact_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="position"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Ownership model removed; tax systems are handled as child records on vendor -->
    <!-- Kanban view for vendors -->
    <record id="view_dino_partner_kanban" model="ir.ui.view">
        <field name="name">dino.partner.kanban</field>
        <field name="model">dino.partner</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div class="o_kanban_primary">
                                <field name="name"/>
                                <div class="o_kanban_egrpou"><field name="egrpou"/></div>
                            </div>
                            <div class="o_kanban_secondary">
                                <div><strong>INN:</strong> <field name="inn"/></div>
                                <div><strong>KVED:</strong> <field name="kved_number"/></div>
                                <div><field name="address"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action for Partner Tags (Type) -->
    <record id="action_dino_partner_tag_list" model="ir.actions.act_window">
        <field name="name">Partner Types</field>
        <field name="res_model">dino.partner.tag</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new partner type
            </p>
        </field>
    </record>


</odoo>
