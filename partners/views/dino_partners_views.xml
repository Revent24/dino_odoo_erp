<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_dino_partner_tree" model="ir.ui.view">
        <field name="name">dino.partner.tree</field>
        <field name="model">dino.partner</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="full_name"/>
                <field name="partner_type"/>
                <field name="egrpou"/>
            </list>
            </field>
        </record>

    <!-- ==============================================
             FORM VIEW: Форма контрагента
             Содержит: основные поля, список контактов
             ============================================== -->
    <record id="view_dino_partner_form" model="ir.ui.view">
        <field name="name">dino.partner.form</field>
        <field name="model">dino.partner</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_update_from_registry" string="Обновить из реестра" type="object" class="btn-primary" invisible="not egrpou"/>
                </header>
                <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="Partner Name" string="Name"/>
                    </h1>
                    <div>
                        <field name="full_name"/>
                    </div>
                </div>
                <div name="button_box" class="oe_button_box">
                    <button class="oe_stat_button" icon="fa-folder-o" type="object"
                            name="action_view_projects">
                        <field name="project_count" widget="statinfo" string="Projects"/>
                    </button>
                    <button class="oe_stat_button" icon="fa-file-text-o" type="object"
                            name="action_view_documents">
                        <field name="document_count" widget="statinfo" string="Documents"/>
                    </button>
                    <button class="oe_stat_button" icon="fa-th-list" type="object"
                            name="action_view_partner_nomenclature">
                        <field name="partner_nomenclature_count" widget="statinfo" string="Nomenclature"/>
                    </button>
                    <button class="oe_stat_button" icon="fa-credit-card" type="object"
                            name="action_view_transactions">
                        <field name="transaction_count" widget="statinfo" string="Transactions"/>
                    </button>
                </div>
                    <group>
                        <group string="MAIN INFO">
                            <field name="egrpou"/>
                            <field name="inn"/>
                            <field name="inn_date"/>
                        </group>
                        <group string="Configuration">
                            <field name="tag_ids" string="Type" widget="many2many_tags" required="True" colors="color:color"/>
                            <field name="tax_system_id" options="{'no_create': True, 'no_open': False}"/>
                            <field name="vat_rate" readonly="1"/>
                            <field name="category_id" string="Vendor Category" options="{'no_create': True, 'no_open': False}" domain="[('origin_type', '!=', 'production')]" invisible="1 not in tag_ids"/>
                        </group>
                        


                        
                    </group>
                    <notebook>
                        <page string="Bank Accounts">
                            <field name="bank_account_ids">
                                <list editable="bottom" decoration-bf="is_default" delete="false">
                                    <field name="sequence" widget="handle"/>
                                    <field name="iban"/>
                                    <field name="bank_name"/>
                                    <field name="bank_city" optional="hide"/>
                                    <field name="bank_mfo" optional="hide"/>
                                    <field name="currency_id" optional="show"/>
                                    <field name="is_default" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Contacts">
                            <field name="contact_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="position"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                </list>
                            </field>
                        </page>
                            <page string="Info">
                                <group>
                                    <group string="KVED">
                                    <field name="kved_number"/>
                                    <field name="kved"/>
                                    <field name="date_from"/>
                                </group>
                                <group string="CONTACT INFO">
                                    <field name="address"/>
                                    <field name="director"/>
                                    <field name="director_gen"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Ownership model removed; tax systems are handled as child records on vendor -->
    <!-- Kanban view for vendors -->
    <record id="view_dino_partner_kanban" model="ir.ui.view">
        <field name="name">dino.partner.kanban</field>
        <field name="model">dino.partner</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div class="o_kanban_primary">
                                <field name="name"/>
                                <div class="o_kanban_egrpou"><field name="egrpou"/></div>
                            </div>
                            <div class="o_kanban_secondary">
                                <div><strong>INN:</strong> <field name="inn"/></div>
                                <div><strong>KVED:</strong> <field name="kved_number"/></div>
                                <div><field name="address"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action moved to core/main_menu.xml -->


</odoo>
