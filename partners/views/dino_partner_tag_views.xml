<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view for Partner Tags -->
    <record id="view_dino_partner_tag_tree" model="ir.ui.view">
        <field name="name">dino.partner.tag.tree</field>
        <field name="model">dino.partner.tag</field>
        <field name="arch" type="xml">
            <list string="Partner Tags" editable="bottom">
                <field name="name"/>
                <field name="role"/>
                <field name="description"/>
                <field name="color" widget="color"/>
            </list>
        </field>
    </record>

    <record id="view_dino_partner_tag_form" model="ir.ui.view">
        <field name="name">dino.partner.tag.form</field>
        <field name="model">dino.partner.tag</field>
        <field name="arch" type="xml">
            <form string="Partner Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="role" widget="radio"/>
                        <field name="description"/>
                        <field name="color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>